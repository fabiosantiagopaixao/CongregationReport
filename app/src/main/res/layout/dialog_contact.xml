<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/llTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/txtTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:paddingLeft="10dp"
            android:text="@string/label_title_contact"
            android:textColor="@color/colorAccent"
            android:textSize="22sp"
            android:textStyle="normal|bold" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/llConteudo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/llTitle"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_marginTop="20sp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/txtMessage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:padding="5dp"
            android:text="@string/msg_options_contact"
            android:textAlignment="center"
            android:textSize="18sp" />
    </LinearLayout>



    <LinearLayout
        android:id="@+id/llRodape2"
        android:layout_width="match_parent"
        android:layout_height="55sp"
        android:gravity="end"
        android:layout_below="@+id/llConteudo"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_marginTop="15sp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btnCall"
            android:layout_width="120dp"
            android:layout_height="match_parent"
            android:layout_margin="5dp"
            android:layout_marginEnd="2dp"
            android:drawableRight="@drawable/ic_phone"
            android:layout_marginRight="2dp"
            android:text="@string/label_call" />

        <Button
            android:id="@+id/btnWhatsapp"
            android:drawableRight="@drawable/ic_whats"
            android:layout_width="150dp"
            android:layout_height="match_parent"
            android:layout_margin="5dp"
            android:text="@string/label_whatsapp" />

    </LinearLayout>
</RelativeLayout>
