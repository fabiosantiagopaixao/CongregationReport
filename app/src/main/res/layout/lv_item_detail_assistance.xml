<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:padding="10sp">

    <LinearLayout
        android:id="@+id/llTop"
        android:visibility="visible"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/txtTitle"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_horizontal"
            android:text="@string/average_for"
            android:textAlignment="center"
            android:textColor="@color/colorRed"
            android:textStyle="normal|bold"></TextView>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/llDataCenter"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/llTop"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/txtId"
            android:visibility="visible"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:text="S-1"
            android:textSize="25sp"
            android:textStyle="normal|bold" />
        <LinearLayout
            android:id="@+id/llBarra"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:visibility="visible"
            android:layout_width="2dp"
            android:background="@color/colorGrayDark"
            android:layout_height="match_parent"
            android:layout_marginLeft="3sp"
            android:layout_marginRight="3sp"
            android:orientation="horizontal" />

        <RelativeLayout
            android:id="@+id/llData"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:id="@+id/ll1Linha"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:visibility="visible">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/date"
                    android:textColor="@color/colorPrimary"
                    android:textStyle="normal|bold" />

                <TextView
                    android:id="@+id/txtDate"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:gravity="end" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll2Linha"
                android:layout_below="@+id/ll1Linha"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView12"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/amount_deaf"
                    android:textColor="@color/colorPrimary"
                    android:textStyle="normal|bold" />

                <TextView
                    android:id="@+id/txtAmountDeaf"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:gravity="end" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll3Linha"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/ll2Linha"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/amount_total"
                    android:textColor="@color/colorPrimary"
                    android:textStyle="normal|bold" />

                <TextView
                    android:id="@+id/txtAmountTotal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:gravity="end"
                    android:inputType="number" />
            </LinearLayout>

        </RelativeLayout>
    </LinearLayout>
</RelativeLayout>
