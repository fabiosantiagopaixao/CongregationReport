<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:orientation="horizontal"
    android:background="@color/colorGray"
    tools:context="br.com.congregationreport.ui.home.HomeFragment">

    <LinearLayout
        android:id="@+id/llActions1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">


        <LinearLayout
            android:id="@+id/llComprasSugeridas"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginRight="4sp"
            android:layout_weight="0.5"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btnReports"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:drawableTop="@mipmap/ic_report"
                android:textColor="@color/colorAccent"
                android:background="@color/colorWhite"
                android:padding="5sp"
                android:text="@string/btn_report" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/llBtnAssistance"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.5"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btnAssistance"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textColor="@color/colorAccent"
                android:drawableTop="@mipmap/ic_meeting"
                android:background="@color/colorWhite"
                android:padding="5sp"
                android:text="@string/btn_meeting_assistance" />
        </LinearLayout>


    </LinearLayout>

    <LinearLayout
        android:id="@+id/llActions2"
        android:layout_width="match_parent"
        android:layout_below="@+id/llActions1"
        android:visibility="gone"
        android:layout_marginTop="4sp"
        android:layout_height="wrap_content"
        android:orientation="horizontal">


        <LinearLayout
            android:id="@+id/llbtnCongregationReport"
            android:layout_marginRight="4sp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.5"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btnCongregationReport"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textColor="@color/colorAccent"
                android:drawableTop="@mipmap/ic_congregation_reports"
                android:background="@color/colorWhite"
                android:padding="5sp"
                android:text="@string/btn_reports" />
        </LinearLayout>


        <LinearLayout
            android:id="@+id/llBtnPublisher"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.5"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btnPublisher"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textColor="@color/colorAccent"
                android:drawableTop="@mipmap/ic_publishers"
                android:background="@color/colorWhite"
                android:padding="5sp"
                android:text="@string/publishers" />
        </LinearLayout>


    </LinearLayout>

</RelativeLayout>